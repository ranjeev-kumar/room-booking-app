.row
  .col-md-2
  .col-md-8.sign-in
    .form-group
      %h2 Log in
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.input :email, autofocus: true, class:'form-control'
      .form-group
        = f.input :password, autocomplete: "off", class:'form-control'
      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label :remember_me
      .form-group
        = f.submit "Log in"
    = render "employees/shared/links"
