%div
  = link_to 'New Facility', new_facility_path, class: 'pull-right btn btn-default'
%div
  %table{class: "table table-bordered"}
    %tr
      %th{:colspan => "5"}
        %b Facilities List
    -if @facilities.present?
      %tr
        %th Name
        %th Description
        %th{:colspan => "3"}
          Actions
      - @facilities.each do |facility|
        %tr
          %td= facility.name
          %td= facility.description
          %td= link_to 'Show', facility, class: 'btn btn-default'
          %td= link_to 'Edit', edit_facility_path(facility), class: 'btn btn-primary'
          %td= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    - else
      %tr
        %td{:colspan => "5"}
          %b No any facility added.

