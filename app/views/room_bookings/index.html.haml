%div
  = link_to 'New Room booking', new_room_booking_path, class: 'pull-right btn btn-default'
%table{class: "table table-bordered"}
  %tr
    %th{:colspan => "7"}
      %b Room Bookings List
  -if @room_bookings.present?
    %tr
      %th Room no
      %th User
      %th Booking Date
      %th Status
      %th{:colspan => "3"}
        Actions
    - @room_bookings.each do |room_booking|
      %tr
        %td= room_booking.conference_room_id
        %td= room_booking.user_id
        %td= room_booking.start_date.to_date.to_s
        %td= room_booking.status.capitalize
        %td.center= link_to 'Show', room_booking, class: 'btn btn-default'
        %td.center= link_to 'Edit', edit_room_booking_path(room_booking), class: 'btn btn-primary'
        %td.center= link_to 'Destroy', room_booking, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
  - else
    %tr
      %td{:colspan => "8"}
        %b No Record found for Room booking.
